@model List<BlogApp.Entity.Category>

@{
    ViewData["Title"] = "Kategoriler";
}

<h2>Kategoriler</h2>

<a class="btn btn-primary mb-2" asp-action="Create">Yeni Kategori Ekle</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Adı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@category.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
